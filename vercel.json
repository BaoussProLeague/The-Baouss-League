{
  "version": 2,
  "buildCommand": "npm install",
  "framework": "express",
  "outputDirectory": "public",
  "env": {
    "PORT": "3001",
    "NODE_ENV": "production",
    "ADMIN_PASSWORD": "baoussproleague"
  },
  "functions": {
    "api/proxy.js": {
      "memory": 1024,
      "maxDuration": 30,
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/proxy.js?endpoint=/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=300, s-maxage=600"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
